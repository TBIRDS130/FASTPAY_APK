<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state - lighter background -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#2a2a2a" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Focused state - green border highlight -->
    <item android:state_focused="true">
        <layer-list>
            <!-- Shadow layer -->
            <item android:top="2dp" android:left="1dp" android:right="-1dp" android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#30000000" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Main card -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1a1a1a" />
                    <corners android:radius="10dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/theme_primary" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Default state - dark elevated card -->
    <item>
        <layer-list>
            <!-- Shadow layer -->
            <item android:top="2dp" android:left="1dp" android:right="-1dp" android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="#30000000" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
            <!-- Main card -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1a1a1a" />
                    <corners android:radius="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
