<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused/Pressed state - Enhanced glow -->
    <item android:state_focused="true" android:state_enabled="true">
        <layer-list>
            <!-- Outer glow -->
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="14dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#4000ff88" />
                </shape>
            </item>

            <!-- Base background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#0c1a1a1a" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Top accent stripe -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#00000000"
                        android:centerColor="#00000000"
                        android:endColor="#1800ff88" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Main border - Brighter when focused -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#7000ff88" />
                </shape>
            </item>

            <!-- Inner border -->
            <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="10dp" />
                    <stroke
                        android:width="0.5dp"
                        android:color="#3000ff88" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true" android:state_enabled="true">
        <layer-list>
            <!-- Base background - Slightly lighter when pressed -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#101a1a1a" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Main border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="2dp"
                        android:color="#6000ff88" />
                </shape>
            </item>

            <!-- Inner border -->
            <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="10dp" />
                    <stroke
                        android:width="0.5dp"
                        android:color="#2500ff88" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Enabled state - Default -->
    <item android:state_enabled="true">
        <layer-list>
            <!-- Base background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#081a1a1a" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Horizontal gradient effect -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="0"
                        android:startColor="#0800ff88"
                        android:centerColor="#00000000"
                        android:endColor="#0800ff88" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Top accent stripe -->
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:type="linear"
                        android:angle="90"
                        android:startColor="#00000000"
                        android:centerColor="#00000000"
                        android:endColor="#1000ff88" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Main border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="1.5dp"
                        android:color="#5000ff88" />
                </shape>
            </item>

            <!-- Inner border -->
            <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="10dp" />
                    <stroke
                        android:width="0.5dp"
                        android:color="#2000ff88" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Disabled state -->
    <item>
        <layer-list>
            <!-- Base background - Darker when disabled -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#05101010" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <!-- Main border - Dimmer -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="12dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#2000ff88" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
