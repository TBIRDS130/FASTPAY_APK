<?xml version="1.0" encoding="utf-8"?>
<!-- Utility card keypad: 123 / 456 / 789 / ⌫ 0 ACTIVE -->
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activationKeypad"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="4"
    android:padding="4dp">

    <!-- Row 1: 1 2 3 -->
    <TextView
        android:id="@+id/activationKeypad1"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/theme_primary"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:background="@drawable/keypad_button_neon_cyber"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/activationKeypad2"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/theme_primary"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:background="@drawable/keypad_button_neon_cyber"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/activationKeypad3"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/theme_primary"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:background="@drawable/keypad_button_neon_cyber"
        android:clickable="true"
        android:focusable="true" />

    <!-- Row 2: 4 5 6 -->
    <TextView
        android:id="@+id/activationKeypad4"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/theme_primary"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:background="@drawable/keypad_button_neon_cyber"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/activationKeypad5"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_columnWeight="1"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/theme_primary"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:background="@drawable/keypad_button_neon_cyber"
