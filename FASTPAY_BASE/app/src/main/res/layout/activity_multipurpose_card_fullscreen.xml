<?xml version="1.0" encoding="utf-8"?>
<!-- Fullscreen layout for MultipurposeCardActivity.
     Logo stays visible at top; card overlay is inflated into multipurposeCardFullscreenRoot. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activation_background"
    tools:context=".ui.MultipurposeCardActivity">

    <!-- Header: logo + tagline (always visible in fullscreen) -->
    <LinearLayout
        android:id="@+id/fullscreenCardHeaderSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingTop="24dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/fullscreenCardLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aoboshi_one"
            android:text="@string/app_name_title"
            android:textColor="@color/theme_primary"
            android:textSize="40sp"
            android:letterSpacing="0.02"
            android:shadowColor="@color/theme_primary"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20" />

        <TextView
            android:id="@+id/fullscreenCardTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/inter"
            android:text="@string/app_tagline"
            android:textColor="@color/theme_primary"
            android:textSize="12sp"
            android:letterSpacing="0.3"
            android:alpha="0.7" />
    </LinearLayout>

    <!-- Card overlay will be added here programmatically -->
    <FrameLayout
        android:id="@+id/multipurposeCardFullscreenRoot"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
