<?xml version="1.0" encoding="utf-8"?>
<!--
  Network Security Config: block cleartext by default.
  Add domain-config for staging (e.g. localhost) if needed.
-->
<network-security-config>
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    <!-- Add domain-config for staging if needed, e.g.:
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">api-staging.fastpaygaming.com</domain>
    </domain-config>
    -->
</network-security-config>
