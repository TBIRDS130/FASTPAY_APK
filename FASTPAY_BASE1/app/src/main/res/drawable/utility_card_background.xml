<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base dark background - Slightly visible to show content -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#081a1a1a" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Utility bill style - Subtle horizontal lines pattern effect -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="#0800ff88"
                android:centerColor="#00000000"
                android:endColor="#0800ff88" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Top accent stripe - Like utility bill header -->
    <item android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="#00000000"
                android:centerColor="#00000000"
                android:endColor="#1000ff88" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main border - Solid utility style -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="#5000ff88" />
        </shape>
    </item>

    <!-- Inner subtle border - Double line effect like utility bills -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="10dp" />
            <stroke
                android:width="0.5dp"
                android:color="#2000ff88" />
        </shape>
    </item>
</layer-list>
