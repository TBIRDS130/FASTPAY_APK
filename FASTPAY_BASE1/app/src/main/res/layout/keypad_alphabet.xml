<?xml version="1.0" encoding="utf-8"?>
<!-- Alphabet keypad for RUNNING mode: QWERTY layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keypadAlphabet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <!-- Row 1: Q W E R T Y U I O P (10 keys) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/keyQ" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="Q" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyW" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="W" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyE" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="E" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyR" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="R" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyT" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="T" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyY" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="Y" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyU" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="U" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyI" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="I" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyO" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="O" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyP" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="P" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
    </LinearLayout>

    <!-- Row 2: A S D F G H J K L (9 keys with half-key offset) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp">

        <TextView android:id="@+id/keyA" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="A" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyS" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="S" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyD" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="D" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyF" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="F" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyG" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="G" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyH" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="H" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyJ" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="J" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyK" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="K" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyL" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="L" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
    </LinearLayout>

    <!-- Row 3: Z X C V B N M (7 keys with larger offset) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp">

        <TextView android:id="@+id/keyZ" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="Z" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyX" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="X" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyC" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="C" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyV" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="V" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyB" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="B" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyN" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="N" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
        <TextView android:id="@+id/keyM" android:layout_width="0dp" android:layout_height="44dp" android:layout_weight="1" android:layout_margin="2dp" android:gravity="center" android:text="M" android:textColor="@color/theme_primary" android:textSize="14sp" android:fontFamily="monospace" android:background="@drawable/keypad_button_glass" android:clickable="true" android:focusable="true" />
    </LinearLayout>

    <!-- Row 4: Backspace | ACTIVE -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/keyAlphaBackspace"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="âŒ«"
            android:textColor="@color/theme_primary"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:background="@drawable/keypad_button_glass"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="true"
            android:contentDescription="Backspace. Long press to clear all" />

        <TextView
            android:id="@+id/keyAlphaEnter"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:gravity="center"
            android:text="ACTIVE"
            android:textColor="@color/theme_primary"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:background="@drawable/keypad_button_glass"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>
