<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Inner shadow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/neu_shadow_dark" />
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Inner highlight -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neu_shadow_light" />
            <corners android:radius="14dp" />
        </shape>
    </item>

    <!-- Input surface -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neu_surface" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</layer-list>
